<section class="login  py-20  mt-2 flex justify-center ">
    <form action="/register" method="POST" id="register-form">
    <% if(messages.error){%>
      <span class="text-red-600"><%= messages.error%></span>
      <%}%>
      <h3 class="pb-3 login-text">Register</h3>
      <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" value="<%= messages.Name%>" class="form-control" id="Name" name="name" placeholder="Enter Name">
      <% if(messages.name) {%>
        <small class="form-text text-red-600"><%= messages.name%></small>
        <% }%>
      </div>
        <div class="form-group">
          <label for="Email">Email address</label>
          <input type="email" value="<%= messages.Email%>" class="form-control" id="Email" name="email" aria-describedby="emailHelp" placeholder="Enter Email">
          <% if(messages.email) {%>
            <small class="form-text text-red-600"><%= messages.email%></small>
            <% }%>
        </div>
        <div class="form-group">
          <label for="Password">Password</label>
          <input type="password" class="form-control" id="Password" name="password" placeholder="Password">
          <% if(messages.password) {%>
            <small class="form-text text-red-600"><%= messages.password%></small>
            <% }%>
        </div>
        <div class="form-group form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="text-white float-left mt-2 font-bold px-6 py-2 rounded-full btn-Login">Register</button>
        <a href="/login"class="font-bold text-sm float-right">Already have an acount ?</a>
        </form>
</section>
