<section class="status">
    <div class="container mx-auto">
        <div class="statusBox mx-auto w-2/3">
     <div class="flex items-center justify-between mb-12">
         <h5 class="font-bold">Track delivery status</h5>
         <h6 class="bg-white py-1 rounded-full px-4 text-green-600 text-sm"><%=order._id%></h6>
     <input type="hidden" id="InputHidden"value="<%= JSON.stringify(order) %>">
        </div>
     <ul>
         <li class="statusLine  text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
         <li class="statusLine  text-xl pb-16"data-status="confirmed"><span>Order Confirmation</span></li>
         <li class="statusLine  text-xl pb-16"data-status="prepared"><span>Preparation</span></li>
         <li class="statusLine  text-xl pb-16"data-status="delivered"><span>On the Way</span></li>
         <li class="statusLine  text-xl "data-status="completed"><span>Completed</span></li>
     </ul>
 </div>
  </div>
</section>